# Protocol Guide (Manus) - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# AI SERVICES (Required)
# ===========================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Voyage AI API Key (for embeddings)
# Get from: https://www.voyageai.com/
VOYAGE_API_KEY=pa-...

# ===========================================
# DATABASE - SUPABASE (Required)
# ===========================================

# Supabase Project URL
# Get from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (for client-side)
SUPABASE_ANON_KEY=eyJ...

# Supabase Service Role Key (for server-side)
# WARNING: Keep this secret! Never expose in client code
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# PostgreSQL Connection String (for Drizzle ORM)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ===========================================
# STRIPE PAYMENTS (Required for Pro tier)
# ===========================================

# Stripe Secret Key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...

# Stripe Publishable Key
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Stripe Webhook Secret
# Get from: Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs for Individual Pro subscription
STRIPE_PRO_MONTHLY_PRICE_ID=price_...
STRIPE_PRO_ANNUAL_PRICE_ID=price_...

# Stripe Price IDs for Small Department (5-20 users, $7.99/user/month)
STRIPE_DEPT_SMALL_MONTHLY_PRICE_ID=price_...
STRIPE_DEPT_SMALL_ANNUAL_PRICE_ID=price_...

# Stripe Price IDs for Large Department (20+ users, $5.99/user/month)
STRIPE_DEPT_LARGE_MONTHLY_PRICE_ID=price_...
STRIPE_DEPT_LARGE_ANNUAL_PRICE_ID=price_...

# ===========================================
# AUTHENTICATION (Required)
# ===========================================

# JWT Secret for session cookies
# Generate with: openssl rand -base64 32
JWT_SECRET=your-32-char-secret-here

# NextAuth Secret (for OAuth)
NEXT_AUTH_SECRET=another-32-char-secret

# NextAuth URL
NEXT_AUTH_URL=http://localhost:3000

# ===========================================
# SERVER CONFIGURATION (Optional)
# ===========================================

# Node environment
NODE_ENV=development

# Server port
PORT=3000

# Expo web port
EXPO_PORT=8081

# ===========================================
# REDIS (Optional - Recommended for Production)
# ===========================================

# Upstash Redis URL (for distributed rate limiting)
# Get from: https://console.upstash.com/
# Falls back to in-memory rate limiting if not configured
REDIS_URL=https://your-redis.upstash.io
REDIS_TOKEN=your_token_here

# Alternative Upstash environment variables
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# ===========================================
# LOGGING (Optional)
# ===========================================

# Log level: debug, info, warn, error
# Default: info in production, debug in development
LOG_LEVEL=info

# ===========================================
# LEGACY MANUS OAUTH (Optional - for migration)
# ===========================================

# Manus OAuth Server URL
OAUTH_SERVER_URL=

# Manus Forge API (if using Manus LLM)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Beta access code for login gate
# SECURITY: Generate a random code and keep it secret
# Example: openssl rand -hex 8 | tr '[:lower:]' '[:upper:]'
EXPO_PUBLIC_BETA_ACCESS_CODE=
